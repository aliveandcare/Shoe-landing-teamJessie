import React from 'react';

interface HeadingProps {
  children: React.ReactNode;
  level?: 1 | 2 | 3 | 4 | 5 | 6;
  className?: string;
}

const Heading: React.FC<HeadingProps> = ({
  children,
  level = 1,
  className = '',
}) => {
  const tagName = `h${Math.max(1, Math.min(6, level))}`;

  return React.createElement(
    tagName,
    { className },
    children
  );
};

export default Heading;
